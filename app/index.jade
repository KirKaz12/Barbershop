	header.page-header.container-fluid
		.page-header__logo
			img(src="img/logo-mob.png" width="226" height="30" alt="Барбершоп 'Бородинский'")
		nav.top-nav.top-nav_opened.top-nav_closed.top-nav_no-js
			button.top-nav__toggle(type="button")
			.top-nav__inner
				ul.top-nav__list
					li.top-nav__item.top-nav__item_active 
						a.top-nav__link(href="#")	Главная
					li.top-nav__item 
						a.top-nav__link(href="#")	Наши работы
					li.top-nav__item 
						a.top-nav__link(href="#")	Записаться
					li.top-nav__item 
						a.top-nav__link(href="#")	Контакты
				ul.top-nav__user-controls
					li.top-nav__user-item
						a.top-nav__user-login(href="#") #[i.icon-login] Войти
	main.main
		section.stats
			.stats__wrapper
				.stats__header-inner
					h1.stats__header стрижка у нас #[br] это выгодно
					p.stats__txt Мужская стрижка требует точного #[br]  подхода. Обратимся к статистике:
					span.stats__fake-data-sm #[sup *] — приведённые данные ложь
				ul.stats__data
					li.stats__item
						b.stats__num 1 500 #[sup *]
						span.stats__item-txt рублей #[br] вложений
					li.stats__item
						b.stats__num 7 200
						span.stats__item-txt секунд #[br] времени мастера
					li.stats__item
						b.stats__num 90 000
						span.stats__item-txt постриженных #[br] волос
					li.stats__item
						b.stats__num 500 000 #[sup *]
						span.stats__item-txt лайков и #[br]комплиментов
				span.stats__fake-data-xs #[sup *] — приведённые данные ложь
	script(src="js/common.js")
